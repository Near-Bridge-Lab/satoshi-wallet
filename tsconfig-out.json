{
  "compilerOptions": {
     "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": ".(css|scss|less|sass)$"
        }
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
